@define retype() {
    upp.withMatch(upp.root, `$type $x__identifier = $val__number_literal;`,
        ({ type, x, val }) => upp.code`${type} ${x} = (${type.text})${val};`);
}

@retype;

int foo = 100;
int bar = 200;

void f() {
    char * bar = "hello";
}

int main() {
    int bar = 5;
    char baz = 'a';
    return 0;
}

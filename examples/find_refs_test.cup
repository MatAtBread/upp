#include "io-lite.h"

@define rename(newName) {
  const node = upp.nextNode('declaration');
  upp.withReferences(node, (ref) => newName);
}

@rename(y) int x = 10;

void print_x() { printf("Global x: %d\n", x); }

int local_rename() {
  @rename(a) int b = 10;
  {
    // Shadowed
    int b = 40;
  }
  return b;
}

int main() {
  print_x();
  x = 20;
  print_x();
  return 0;
}

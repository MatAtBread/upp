#include "io-lite.h"

@define rename(newName) {
    const node = upp.nextNode();
    if (!node) return;
    
    // Use withReferences for stable renaming across the whole tree
    upp.withReferences(node, (ref) => newName);
}

@rename(y)
int x = 10;

void print_x() {
    printf("Global x: %d\n", x);
}

void local_rename() {
    @rename(a) int b = 10;
    {
        // Shadowed
        int b = 40;
    }
    return b;
}

int main() {
    print_x();
    x = 20;
    print_x();
    return 0;
}

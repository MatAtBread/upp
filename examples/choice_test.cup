#include "io-lite.h"

@define choice(condition) {
  const body1 = upp.consume('compound_statement');
  const body2 = upp.consume('compound_statement');
  return `if (${condition}) ${body1.text} else ${body2.text}`;
}

void main() {
  int x = 1;
  @choice(x) {
    printf("True\n");
  } {
    printf("False\n");
  }
}
